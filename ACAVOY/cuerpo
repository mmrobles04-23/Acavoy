    <input type="text" id="modelo">

    <label>Año</label>
    <input type="number" id="anio">

    <label>Precio</label>
    <input type="number" id="precio">

    <button onclick="agregarVehiculo()">Agregar al inventario</button>

    <h3>Inventario actual</h3>

